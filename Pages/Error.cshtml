@page
@model ErrorModel
@{
    ViewData["Title"] = "Errore";
    Layout = "_Layout"; // assicura di usare il layout principale
}

<div class="main-container text-center">
    <!-- Logo -->
    <div class="mb-4">
        <img src="~/images/LogoFP.png" alt="Logo" style="max-height:80px;" />
    </div>

    <!-- Titolo -->
    <h1 class="display-4 text-danger mb-3">Oops! Qualcosa è andato storto.</h1>
    <p class="lead">Stiamo lavorando per risolvere il problema.</p>

    @if (Model.ShowRequestId)
    {
        <div class="alert alert-warning mt-4">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </div>
    }

    <div class="mt-5">
        <a asp-page="/Index" class="btn btn-firstpoint me-2">
            <i class="bi bi-house-door-fill"></i> Torna alla Home
        </a>
        <a href="javascript:location.reload();" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-clockwise"></i> Riprova
        </a>
    </div>
</div>
